{% extends "base.html.twig" %}

{% block title %}
	ManoMano -
	{{ product.name }}
{% endblock %}

{% block body %}
	{{ product.poster }}
	<h1>{{ product.name }}</h1>
	{{ product.price }}
	<p>{{ product.description }}</p>

	{# {{ product.comments }} #}
<div class="container">
	<div class="ratings">
		<input type="radio" name="star" id="star5"><label for="star5" class="fas fa-star">
		</label>
		<input type="radio" name="star" id="star4"><label for="star4" class="fas fa-star">
		</label>
		<input type="radio" name="star" id="star3"><label for="star3" class="fas fa-star">
		</label>
		<input type="radio" name="star" id="star2"><label for="star2" class="fas fa-star">
		</label>
		<input type="radio" name="star" id="star1"><label for="star1" class="fas fa-star">
		</label>
		<form action="#">
			<header></header>
			<div class="textarea">
				<textarea cols="30" placeholder="Describe your experience..."></textarea>
			</div>
			<div class="btn">
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}
				<button type="submit">Post</button>
			</div>
		</form>
	</div>
	</div>

{% endblock %}
